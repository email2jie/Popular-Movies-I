<resources>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="detail_overview">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:lineSpacingMultiplier">@dimen/body_text_line_spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="detail_wide_overview">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_xlarge</item>
        <item name="android:layout_marginRight">@dimen/margin_xlarge</item>
        <item name="android:lineSpacingMultiplier">@dimen/body_text_line_spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="detail_backdrop_image">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <style name="detail_thumb_image">
        <item name ="android:layout_marginLeft">@dimen/margin_large</item>
        <item name ="android:layout_marginTop">@dimen/details_thumb_margin_top</item>
        <item name ="android:src">#66c0cf</item>

    </style>

    <style name="detail_title">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:text">Movie Title</item>
    </style>

    <style name="detail_release">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:text">2015 released</item>
    </style>

    <style name="detail_rate">
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:layout_marginRight">@dimen/margin_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:gravity">bottom</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/sunshine_blue</item>
        <item name="colorPrimaryDark">@color/sunshine_dark_blue</item>
    </style>

    <!-- Main activity theme. -->
    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Sunshine.NoTitle</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Sunshine.NoTitle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome</item>
        <!--<item name="logo">@drawable/ic_logo</item>-->
    </style>
</resources>
